@model MvcIntroDemo.Models.Product.ProductViewModel


@{
    ViewData["Title"] = $"Product N. {Model.Id}";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-5">
        <div class="card" style="width: 18rem">
            <div class="card-header">@ViewBag.Title</div>

            <div class="card-body">
                <h5 class ="card-title">Product Name: @Model.Name</h5>
                <p class="card-text">Price: @Model.Price lv.</p>
            </div>

        </div>
    </div>
</div>